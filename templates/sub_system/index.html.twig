{% extends 'base.html.twig' %}

{% block title %}SubSystem index{% endblock %}

{% block body %}
    <h1>SubSystem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_system in sub_systems %}
            <tr>
                <td>{{ sub_system.id }}</td>
                <td>{{ sub_system.name }}</td>
                <td>
                    <a href="{{ path('sub_system_show', {'id': sub_system.id}) }}">show</a>
                    <a href="{{ path('sub_system_edit', {'id': sub_system.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sub_system_new') }}">Create new</a>
{% endblock %}
