{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <main role="main" class="inner cover">
    <h1 class="cover-heading">BJJ Cycle</h1>
    <p class="lead">Track your training and never forget a technique again!.</p>
    </main>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.Password.first) }}
                    {{ form_row(form.Password.second) }}
                    {{ form_row(form.joinDate) }}
            </div>
            <div class="col-sm">
                <p><strong>Sessions Per Week</strong></p>
                    {{ form_row(form.f_sesh_per_week) }}
                    {{ form_row(form.m_sesh_per_week) }}
                <p><strong>Variants Per Week</strong></p>
                    {{ form_row(form.f_sesh_per_variant) }}
                    {{ form_row(form.m_sesh_per_variant) }}
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Register!</button>
{{ form_end(form) }}


{% endblock %}